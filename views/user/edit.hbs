<p>Update Interest:</p>
<form action="/user/{{user._id}}?_method=PUT" method="POST">
  <div class="form-group">
    <label for="email">Email</label>
    <input required class="form-control" type="text" name="email" id="email" value="{{user.email}}">
  </div>
  <div class="form-group">
    <label for="age">Age</label>
    <input required class="form-control" type="number" name="age" id="age" value="{{user.age}}">
  </div>
  <div class="form-group">
    <label for="familyStatus">Family Status</label>
    <select name="familyStatus" class="custom-select" id="inputGroupSelect01">
    <option value="Single">Single</option>
    <option value="Married">Married</option>
    <option value="Married with Kids">Married with Kids</option>
  </select>
  </div>
  <div class="form-group">
    <label for="location">Loction</label>
    <input required class="form-control" type="text" name="location" id="location" placeholder="Enter City, State"value="{{user.location}}">
  </div>

  <p>Update my interests:</p>
  {{#each interest}}
    <div>
      <input class="ina1" type="checkbox" name="interests" value="{{_id}}"> {{interestList}}
    </div>
  {{/each}}
  <button type="submit">Update my interest</button>
</form>
