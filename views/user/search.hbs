<form action="/user/{{currentUser._id}}/search" method="GET">
  <div class="form-group">
    <label for="age">Age</label>
    <input class="form-control" type="number" name="age" id="age" value="{{user.age}}">
  </div>
  <div class="form-group">
    <label for="familyStatus">Family Status</label>
    <select name="familyStatus" class="custom-select" id="inputGroupSelect01">
    <option value="Single">Single</option>
    <option value="Married">Married</option>
    <option value="Married with Kids">Married with Kids</option>
  </select>
  </div>
  <div class="form-group">
    <label for="location">Loction</label>
    <input class="form-control" type="text" name="location" id="location" placeholder="Enter City, State"value="{{user.location}}">
  </div>
  {{#each interest}}
    <div>
      <input class="ina1" type="checkbox" name="interests" value="{{_id}}"> {{interestList}}
    </div>
  {{/each}}
  <button type="submit">Search</button>
</form>
<a href="/user/{{currentUser._id}}/search">Clear search</a>
<br /><br /><br />
{{#each user}}

  <p>Username: {{username}}</p>
  <p>Email: {{email}}</p>
  <p>Type: {{ina}}</p>
  <p>Age: {{age}}</p>
  <p>Location: {{location}}</p>
  <p>Family: {{familyStatus}}</p>


  My Interests:
  {{#each interests}}
    <span>{{interestList}}</span>
  {{/each}}
  <br />
  <a href="/user/{{_id}}/chat"><button class="btn btn-primary" id="{{_id}}">Connect us</button></a>
  <br /><br /><br />
{{/each}}