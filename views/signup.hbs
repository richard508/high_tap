<h2>Signup</h2>
{{#if message}}
  <div class="alert alert-danger">{{message}}</div>
{{/if}}
<form method="post" action="/signup">
  <div class="form-group">
    <label for="username">Username</label>
    <input required class="form-control" type="text" name="username" id="username">
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input required class="form-control" type="text" name="email" id="email">
  </div>
  <div class="form-group ina">
    <label for="ina">What are you?</label><br />
    <input class="ina1" type="checkbox" name="ina"> Influencer <br />
    <input class="ina2" type="checkbox" name="ina"> Advertiser
  </div>

  <div class="form-group inf hidden">
    <label for="iFollower">Number of Instagram Followers:</label>
    <input required class="form-control" type="text" name="iFollower" id="iFollower">
    <label for="tier">Tier:</label>
    <input class="form-control" type="text" value="1">
  </div>

  <div class="form-group ads hidden">
    <label for="companyName">Company Name:</label>
    <input required class="form-control" type="text" name="companyName" id="companyName">

    <label for="category">Category:</label>
    <input required class="form-control" type="text" name="category" id="category">

    <label for="size">Company Size:</label>
    <input required class="form-control" type="text" name="size" id="size">
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input required class="form-control" type="password" name="password" id="password">
  </div>
  <div class="form-group">
    <label for="confirmPassword">Password Confirmation</label>
    <input required class="form-control" type="password" name="confirmPassword" id="confirmPassword">
  </div>

  <input class="submit btn btn-default" type="submit">
</form>