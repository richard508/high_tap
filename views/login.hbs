<section class="masthead d-flex">
  {{#if message}}
    <div class="alert alert-danger">{{message}}</div>
  {{/if}}
	<div class="container my-auto">
		<div class="row">
			<div class="col-lg-10 mx-auto">
				<h1 class="text-uppercase">Login</h1>
        <form method="post" action="/login">
          <div class="form-group">
            <label for="email">Email</label>
            <input class="form-control inputField" type="text" name="email" id="email">
          </div>

          <div class="form-group">
            <label for="email">Password</label>
            <input class="form-control inputField" type="password" name="password" id="password">
          </div>

          <input class="btn btn-default" type="submit">
        </form>
      </div>
    </div>
  </div>
</section>
